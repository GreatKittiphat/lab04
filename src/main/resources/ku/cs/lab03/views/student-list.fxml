<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.lab03.controllers.StudentListController">
   <children>
      <ListView fx:id="studentListView" layoutX="32.0" layoutY="106.0" prefHeight="461.0" prefWidth="416.0" />
      <Label layoutX="32.0" layoutY="58.0" text="Student List">
         <font>
            <Font name="System Bold" size="31.0" />
         </font>
      </Label>
      <Label layoutX="471.0" layoutY="106.0" text="Selected Student">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label layoutX="471.0" layoutY="154.0" text="ID:">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label layoutX="471.0" layoutY="197.0" text="Name:">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label layoutX="471.0" layoutY="240.0" text="Score:">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label fx:id="idLabel" layoutX="547.0" layoutY="154.0" text="{idLabel}">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label fx:id="nameLabel" layoutX="547.0" layoutY="197.0" text="{nameLabel}">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label fx:id="scoreLabel" layoutX="547.0" layoutY="240.0" text="{scoreLabel}">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Button layoutX="32.0" layoutY="20.0" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" />
      <Label layoutX="471.0" layoutY="280.0" text="Give score: ">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="giveScoreTextField" layoutX="578.0" layoutY="281.0" prefHeight="26.0" prefWidth="93.0" />
      <Button layoutX="677.0" layoutY="281.0" mnemonicParsing="false" onAction="#onGiveScoreButtonClick" text="OK" />
      <Label fx:id="errorLabel" layoutX="580.0" layoutY="312.0" text="{errorLabel}" textFill="RED">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
